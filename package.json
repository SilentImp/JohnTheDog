{
  "name": "currencyconvertor",
  "version": "1.0.0",
  "description": "A test case base project",
  "author": "Anton Nemtsev <newsilentimp@gmail.com>",
  "license": "ISC",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext js,jsx",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "test": "jest",
    "docker:build": "docker build . -t silentimp/currencyconvertor",
    "docker:run": "docker run -p 3000:3000 silentimp/currencyconvertor",
    "docker:publish": "docker push silentimp/currencyconvertor",
    "compose": "DEFAULT_HOST=webauth.courses docker-compose -f docker-compose.yml up --build -d"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest --env=jsdom --onlyChanged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --quiet --fix"
    ]
  },
  "dependencies": {
    "c3": "^0.7.20",
    "classnames": "^2.2.6",
    "currency.js": "^2.0.3",
    "d3": "^6.5.0",
    "dayjs": "^1.10.4",
    "next": "^10.0.7",
    "prop-types": "^15.7.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "sass": "^1.32.7"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.0.3",
    "@testing-library/user-event": "^12.7.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-css-modules": "^2.1.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  }
}
